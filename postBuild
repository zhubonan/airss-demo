#!/bin/bash
set -e

AIRSS_URL='http://bit.ly/2KtvEWU'

curl -L -o AIRSS.tgz $AIRSS_URL
tar zxf AIRSS.tgz
rm AIRSS.tgz

mv airss-* airss
cd airss
export FC=gfortran
make all
make install

# Copy the executable to the folder
mkdir -p ~/.local/bin
cp bin/* ~/.local/bin/

# Make a symbolic link to AIRSS's examples
ln -s ~/airss/examples ~/examples

# Append welcome message to bashrc

cat >> $HOME/.bashrc << EOM
# Let the user start in the examples folder
cd examples
# Print AIRSS banner
head -n 10 $HOME/airss/README
echo ""
# Print the list of examples
echo "List of AIRSS examples:"
echo ""
cat $HOME/examples/README

EOM